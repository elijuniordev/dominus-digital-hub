{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // CORRIGIDO: Adiciona a pasta 'src' ao escopo de inclus√£o
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules"]
}